/* input */
.email_input {
    margin: 100rpx auto 0 auto;
    padding-left: 20rpx;
    padding-right: 20rpx;
    width: 400rpx;
    height: 76rpx;
    font-size: 28rpx;
    line-height: 76rpx;
    background: #F1F1F1;
    border-radius: 12rpx;
}

.email_input.error {
    border: 2rpx solid red;
}

